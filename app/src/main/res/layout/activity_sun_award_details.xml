<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bjcathay.woqu.activity.SunAwardDetailsActivity"
    android:background="@color/white"
    >

    <com.bjcathay.woqu.view.TopView
        android:id="@+id/top_placelist_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline"
        android:layout_below="@+id/top_placelist_layout"
        />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@+id/top_placelist_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@+id/linearLayout2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <com.bjcathay.woqu.view.RoundCornerImageView
            android:id="@+id/sunaward_details_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/gray_color"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_alignLeft="@+id/sunaward_fragment_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/sunaward_fragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小喔"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sunaward_fragment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="@color/expre_color"
                    android:text="昨天 07:53"
                    />
                <TextView
                    android:id="@+id/sunaward_fragment_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/sunaward_fragment_time"
                    android:layout_marginLeft="60dp"
                    android:textSize="11dp"
                    android:textColor="@color/expre_color"
                    android:text="来自iphone6"
                    />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/sunaward_details_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            />

    </RelativeLayout>
        <com.bjcathay.woqu.view.GridViewForScrollView
            android:id="@+id/sunaward_details_gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="5dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:padding="10dp"
            android:scrollbars="none"
            android:verticalSpacing="5dp" >
        </com.bjcathay.woqu.view.GridViewForScrollView>

    <LinearLayout
        android:id="@+id/sunaward_details_address_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/sunaward_details_image_address"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/address"
            />

        <TextView
            android:id="@+id/sunaward_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textSize="11sp"
            android:textColor="@color/address_textcolor"
            android:layout_gravity="center"
            android:text="位置：美国"
            />
    </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_color"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/like_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            >
            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">-->
            <ImageView
                android:id="@+id/xiaoxi"
                android:layout_width="11dp"
                android:layout_height="11dp"
                />
            <!--</LinearLayout>-->
            <com.bjcathay.woqu.view.GridViewForScrollView
                android:layout_marginLeft="10dp"
                android:id="@+id/sunaward_details_zan_gridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:horizontalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="7"
                android:scrollbars="none"
                android:verticalSpacing="5dp" >
            </com.bjcathay.woqu.view.GridViewForScrollView>

        </LinearLayout>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewline"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/view_line"/>
    <com.bjcathay.woqu.view.ScrollViewWithListView
        android:id="@+id/sunaward_details_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:layout_marginTop="10dp"
        android:listSelector="@android:color/transparent"

        >

    </com.bjcathay.woqu.view.ScrollViewWithListView>

    </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:id="@+id/send_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@id/scroll"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#F1F1F1"
            android:visibility="gone"


            >
            <EditText
                android:id="@+id/sunaward_details_edit_content"
                android:layout_width="262dp"
                android:layout_height="25dp"
                android:layout_weight="9"
                android:layout_gravity="center_vertical"
                android:background="@drawable/editview_shape"
                android:hint="我也来说一句"
                android:paddingLeft="3dp"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:id="@+id/sunaward_details_button_send"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/red_btn_color"
                android:text="发送"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewline"
            />
    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:descendantFocusability="afterDescendants"
        android:layout_alignParentBottom="true"

        >

        <LinearLayout
            android:id="@+id/sunaward_fragment_image_information"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_click"
            android:gravity="center_horizontal|center_vertical"
            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/xiaoxi"
                />

            <TextView
                android:id="@+id/sunaward_fragment_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/wish_text"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:text="评论"
                />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/viewline"
            />
        <LinearLayout
            android:id="@+id/sunaward_fragment_image_zan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/item_click"
            android:descendantFocusability="afterDescendants"

            >
            <ImageView
                android:id="@+id/zan_image"
                android:layout_width="16dp"
                android:layout_height="16dp"

                />

            <TextView
                android:id="@+id/sunaward_fragment_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="赞"
                android:textColor="@color/wish_text"
                android:textSize="12dp"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
