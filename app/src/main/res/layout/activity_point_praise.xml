<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myapplication.PointPraiseActivity">

    <com.bjcathay.woqu.view.NotifyingScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                >

                    <ImageView
                        android:id="@+id/woqu_gift_image"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:src="@color/viewline"
                        />


                <ImageView
                    android:id="@+id/woqu_gift_pb"
                    android:layout_width="20.5dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:src="@color/viewline"

                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/viewline"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/woqu_gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/woqu_campagin_going_text"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    >
                    <ImageView
                        android:layout_width="@dimen/woqu_gift_icon"
                        android:layout_height="@dimen/woqu_gift_icon"
                        android:src="@drawable/gift"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="礼物数量:"
                        />
                    <TextView
                        android:id="@+id/woqu_gift_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/home_exchange_press_color"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    >
                    <ImageView
                        android:layout_width="@dimen/woqu_gift_icon"
                        android:layout_height="@dimen/woqu_gift_icon"
                        android:src="@drawable/clock"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="11sp"
                        android:id="@+id/text_view"
                        android:text="距结束:"
                        />
                    <com.bjcathay.woqu.view.TimeTextView
                        android:id="@+id/woqu_gift_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="11sp"
                        android:textColor="@color/home_exchange_press_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    >
                <ImageView
                    android:layout_width="@dimen/woqu_gift_icon"
                    android:layout_height="@dimen/woqu_gift_icon"
                    android:src="@drawable/money"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="市场价格:"
                    />
                <com.bjcathay.woqu.view.PriceTextView
                    android:id="@+id/woqu_gift_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="11sp"
                    android:textColor="@color/home_exchange_press_color"
                    />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/view_line"

                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_color"
                ></View>
            <RelativeLayout
                android:id="@+id/woqu_ifstart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/woqu_campagin_going_height">
                <TextView
                    android:id="@+id/zantext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/woqu_campagin_going"
                    android:textSize="15dp"
                    android:text="点击查看活动进展"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_color"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/title_icon_width"
                        android:layout_height="@dimen/title_icon_height"
                        android:src="@drawable/solid_bg"
                        android:layout_gravity="center_vertical"
                        />
                <TextView
                    android:id="@+id/woqu_gift_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/woqu_campagin_going_text"
                    android:text="活动规则"
                    />
                </LinearLayout>
                <TextView
                    android:id="@+id/woqu_gift_rule_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="11dp"
                    android:textColor="@color/woqu_campagin_rule_text"
                    android:textSize="14dp"
                    />

            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_color"
                ></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/woqu_gift_commodity_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/title_icon_width"
                        android:layout_height="@dimen/title_icon_height"
                        android:src="@drawable/solid_bg"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/woqu_gift_commodity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/woqu_campagin_going_text"
                        android:textSize="15dp"
                        android:text="商品详情" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignTop="@+id/woqu_gift_commodity_linear"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    >
                <WebView
                    android:id="@+id/woqu_gift_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></WebView>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/woqu_campagin_tip_text"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:text="戳我去商家看看"
                    />
            </RelativeLayout>
        </LinearLayout>
    </com.bjcathay.woqu.view.NotifyingScrollView>

            <RelativeLayout
                android:id="@+id/head_f"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
        <ImageView
            android:id="@+id/title_back_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_img_title_back"
            />
                <View
                    android:id="@+id/view_l"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/viewline"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/woqu_gift_button"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:background="@color/red"
            android:textColor="@color/white"
            android:text="查看中奖名单"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/woqu_gift_share"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/red_click"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="我想要"
            />
    </LinearLayout>

</RelativeLayout>

