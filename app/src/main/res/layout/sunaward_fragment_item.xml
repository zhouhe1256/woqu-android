<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_click"
    android:descendantFocusability="beforeDescendants"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="afterDescendants"
        >
        <LinearLayout
            android:id="@+id/lis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <com.bjcathay.woqu.view.RoundCornerImageView
                    android:id="@+id/sunaward_fragment_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@color/viewline"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_alignLeft="@+id/sunaward_fragment_image"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/sunaward_fragment_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小喔"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/sunaward_fragment_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="@color/expre_color"
                            android:text="昨天 07:53"
                            />
                        <TextView
                            android:id="@+id/sunaward_fragment_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/sunaward_fragment_time"
                            android:layout_marginLeft="10dp"
                            android:textSize="11dp"
                            android:textColor="@color/expre_color"
                            android:text="来自iphone6"
                            />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/sunaward_fragment_send"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:text="发送中..."
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/sunaward_fragment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="本周的竞选商品已经公布了~小伙伴们快快把自己想要的商品顶起来吧，本周日24点之前点赞最高的将会直接进入瀑布流哦~"
                    />

            </RelativeLayout>

                <com.bjcathay.woqu.view.GridViewForScrollView
                    android:id="@+id/sunaward_fragment_gridview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:listSelector="@android:color/transparent"
                    android:padding="10dp"
                    android:horizontalSpacing="5dp"
                    android:verticalSpacing="5dp"
                    android:numColumns="3"
                    android:scrollbars="none"
                    >
                </com.bjcathay.woqu.view.GridViewForScrollView>

            <LinearLayout
                android:id="@+id/sunaward_fragment_address_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/sunaward_fragment_image_address"
                    android:layout_width="8dp"
                    android:layout_height="11dp"
                    android:src="@drawable/address"
                    android:layout_marginLeft="10dp"

                    />

                <TextView
                    android:id="@+id/sunaward_fragment_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:textColor="@color/address_textcolor"
                    android:text="位置：美国"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/viewline"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:descendantFocusability="afterDescendants"
            >

            <LinearLayout
                android:id="@+id/sunaward_fragment_image_information"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/item_click"
                android:gravity="center_horizontal|center_vertical"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/xiaoxi"
                    />

                <TextView
                    android:id="@+id/sunaward_fragment_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/wish_text"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:text="2"
                    />
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@color/viewline"
                />
            <LinearLayout
                android:id="@+id/sunaward_fragment_image_zan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:background="@drawable/item_click"
                android:descendantFocusability="afterDescendants"
                >
                <ImageView
                    android:id="@+id/zan_image"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    />

                <TextView
                    android:id="@+id/sunaward_fragment_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/wish_text"
                    android:textSize="12dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_color"
            />
    </LinearLayout>
</LinearLayout>
